{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@routes/*": ["routes/*"],
      "@middleware/*": ["middleware/*"],
      "@lib/*": ["lib/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@socket/*": ["socket/*"]
    }
  },
  "include": ["src"]
}
